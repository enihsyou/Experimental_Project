<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--卡片主体-->
    <android.support.v7.widget.CardView
        android:id="@+id/detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:contentPadding="15dp">
        <!--卡片里面一个垂直的线性布局，放置上下两部分，上面是单号之类的，下面是快递记录-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            <!--单号部分-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <!--快递公司图标-->
                <ImageView
                    android:id="@+id/company_head_card_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/ic_info_black_24dp"
                    android:contentDescription="@string/company_logo" />
                <!--单号-->
                <TextView
                    android:id="@+id/package_number_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/company_head_card_view"
                    android:height="30dp"
                    android:textSize="25sp"
                    tools:text="TextView" />
                <!--快递公司名字-->
                <TextView
                    android:id="@+id/company_name_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/package_number_card_view"
                    android:layout_toEndOf="@+id/company_head_card_view"
                    android:height="20dp"
                    tools:text="TextView" />
            </RelativeLayout>
            <!--包含详细快递信息-->
            <LinearLayout
                android:id="@+id/each_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
