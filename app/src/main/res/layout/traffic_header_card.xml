<?xml version="1.0" encoding="utf-8"?><!--包裹信息卡片-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--卡片主体-->
    <com.enihsyou.shane.packagetracker.view.TrafficCardView
        android:id="@+id/header_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:contentPadding="8dp">
        <!--卡片里面一个垂直的线性布局，放置上下两部分，上面是单号之类的，下面是快递记录-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            <!--单号部分-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--快递公司图标-->
                <ImageView
                    android:id="@+id/company_head_card_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@string/company_logo"
                    android:clickable="false"
                    app:srcCompat="@drawable/ic_info_black_24dp" />
                <!--单号-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/company_head_card_view"
                    android:layout_toRightOf="@+id/company_head_card_view"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/package_number_card_view"
                        style="?android:attr/textAppearanceLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:clickable="false"
                        android:textIsSelectable="true"
                        tools:text="快递单号" />
                    <!--快递公司名字-->
                    <TextView
                        android:id="@+id/company_name_card_view"
                        style="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:clickable="false"
                        android:textIsSelectable="true"
                        tools:text="快递公司" />
                </LinearLayout>
            </RelativeLayout>
            <!--包含详细快递信息-->
            <LinearLayout
                android:id="@+id/header_each_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </com.enihsyou.shane.packagetracker.view.TrafficCardView>
</LinearLayout>
